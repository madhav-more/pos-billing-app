{
  "name": "guru-pos",
  "version": "1.0.0",
  "description": "G.U.R.U - Privacy-first POS & Billing app with offline-first WatermelonDB",
  "main": "expo/AppEntry.js",
  "scripts": {
    "start": "./start.sh",
    "dev": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx",
    "lint:fix": "eslint . --ext .js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,json}\"",
    "seed": "node src/db/seed-script.js",
    "clean": "rm -rf node_modules package-lock.json && npm install"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.0.0",
    "@nozbe/watermelondb": "^0.27.1",
    "@react-native-async-storage/async-storage": "^2.1.2",
    "@react-native-community/netinfo": "^11.4.1",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/stack": "^6.3.20",
    "@reduxjs/toolkit": "^2.0.1",
    "@supabase/supabase-js": "^2.39.3",
    "date-fns": "^3.3.1",
    "expo": "~53.0.0",
    "expo-camera": "~16.1.11",
    "expo-constants": "~17.1.7",
    "expo-dev-client": "~5.2.4",
    "expo-file-system": "~18.1.11",
    "expo-linear-gradient": "^15.0.7",
    "expo-print": "~14.1.4",
    "expo-secure-store": "~14.2.4",
    "expo-sharing": "~13.1.5",
    "expo-sqlite": "~15.2.14",
    "expo-status-bar": "~2.2.3",
    "react": "19.0.0",
    "react-native": "^0.79.6",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "react-native-url-polyfill": "^2.0.0",
    "react-native-vector-icons": "^10.3.0",
    "react-redux": "^9.0.4",
    "redux-persist": "^6.0.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/plugin-proposal-decorators": "^7.28.0",
    "@testing-library/react-native": "^12.4.3",
    "babel-jest": "^29.7.0",
    "babel-preset-expo": "~13.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "jest-expo": "~53.0.10",
    "prettier": "^3.2.5",
    "react-test-renderer": "^19.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "preset": "jest-expo",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|react-native-svg|@nozbe)/)"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  }
}
